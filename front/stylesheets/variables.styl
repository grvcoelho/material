/**
 * Shadows
 */
$shadow-z1 = 0 2px 5px rgba(0,0,0, .26), 0 2px 10px rgba(0,0,0, .16)
$shadow-z2 = 0 8px 17px rgba(0,0,0, .20), 0 6px 20px rgba(0,0,0, .19)
$shadow-z3 = 0 12px 15px rgba(0,0,0, .24), 0 17px 50px rgba(0,0,0, .19)
$shadow-z4 = 0 16px 28px rgba(0,0,0, .22), 0 25px 55px rgba(0,0,0, .21)
$shadow-z5 = 0 27px 24px rgba(0,0,0, .20), 0 40px 77px rgba(0,0,0, .22)


/**
 * Transitions
 */

$transition-bezier = cubic-bezier(0.4, 0, 0.2, 1);

/**
 * Typography
 */

/** Font families */
$font-family-sans-serif = "RobotoDraft", "Roboto", Helvetica, Arial, sans-serif;
$font-family-serif      = Georgia, "Times New Roman", Times, serif;
$font-family-monospace  = Menlo, Monaco, Consolas, "Courier New", monospace;
$font-family-base       = $font-family-sans-serif;

/** Font sizes */
$font-size-base    = 14px
$font-size-smaller = ceil($font-size-base * 0.65)
$font-size-small   = ceil($font-size-base * 0.85)
$font-size-large   = ceil($font-size-base * 1.25)
$font-size-larger  = floor($font-size-base * 1.45)

$font-size-h1 = floor(($font-size-base * 2.6))
$font-size-h2 = floor(($font-size-base * 2.15))
$font-size-h3 = ceil(($font-size-base * 1.7))
$font-size-h4 = ceil(($font-size-base * 1.25))
$font-size-h5 = $font-size-base;
$font-size-h6 = ceil(($font-size-base * 0.85))

/** Line height */
$line-height-base     = 1.428571429 
$line-height-computed = floor(($font-size-base * $line-height-base))


/**
 * Breakpoints
 */
rupture.scale       = 0 480px 768px 992px 1170px
rupture.scale-names = 'xs' 'sm' 'md' 'lg' 'xl'


/**
 * Grid system
 */
$grid-columns = 12

 
/**
 * Container sizes
 */
$container-xs = 95%
$container-sm = 90%
$container-md = 90%
$container-lg = 980px
$container-xl = 1080px
$container-fluid = 95%